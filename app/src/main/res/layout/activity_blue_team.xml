<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_team_dark"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:title="Blue Team - Defensa"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:navigationIconTint="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <!-- Estado del Sistema -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/blue_team_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›¡ï¸ Sistema de Defensa"
                        android:textColor="@color/blue_team_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Estado WiFi con indicador -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WiFi"
                            android:textColor="@color/gray"
                            android:textSize="11sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvWifiStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âšª No conectado"
                                android:textColor="@color/gray"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvWifiName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/blue_team_dark"
                                android:textSize="13sp"
                                android:layout_marginStart="4dp"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOpenWifi"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_marginStart="6dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                app:backgroundTint="@color/blue_team_light"
                                app:cornerRadius="18dp"
                                app:icon="@drawable/ic_wifi"
                                app:iconTint="@color/blue_team_dark"
                                app:iconGravity="textStart"
                                app:iconPadding="0dp"
                                android:contentDescription="Abrir WiFi" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- IP local -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IP Local"
                            android:textColor="@color/gray"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvLocalIp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0.0.0"
                            android:textColor="@color/blue_team_dark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Estado ESP32 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ESP32"
                            android:textColor="@color/gray"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvEsp32Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âšª Desconectado"
                            android:textColor="@color/blue_team_dark"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado:"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvDefenseStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="âšª Inactivo"
                                android:textColor="@color/blue_team_dark"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ataques Bloqueados:"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvAttacksBlocked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/blue_team_dark"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToggleDefense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="48dp"
                        android:text="Activar Defensa"
                        android:textSize="14sp"
                        app:backgroundTint="@color/blue_team_dark" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TÃ­tulo de Defensas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Herramientas de Defensa"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- ConexiÃ³n ESP32 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ConexiÃ³n ESP32"
                        android:textColor="@color/gray"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilEsp32Ip"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:hint="IP del ESP32">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etEsp32Ip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:text="192.168.1.100"
                                android:textSize="13sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConnectEsp32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Conectar"
                            android:textSize="13sp"
                            app:backgroundTint="@color/blue_team_dark" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Firewall -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFirewall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/blue_team"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@color/blue_team_light"
                            android:gravity="center"
                            android:text="ðŸ”¥"
                            android:textColor="@color/blue_team_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Firewall Inteligente"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Bloquea paquetes maliciosos automÃ¡ticamente"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvFirewallStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="âšª Desactivado"
                                android:textColor="@color/gray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchFirewall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFirewallConfig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IPs Bloqueadas:"
                            android:textColor="@color/gray"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvBlockedIps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ninguna"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- IDS/IPS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIDS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/blue_team"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@color/blue_team_light"
                            android:gravity="center"
                            android:text="ðŸ”"
                            android:textColor="@color/blue_team_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IDS/IPS"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Detecta y previene intrusiones en tiempo real"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvIDSStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="âšª Desactivado"
                                android:textColor="@color/gray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchIDS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvIDSDetections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Detecciones: 0"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Anti-Deauth -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAntiDeauth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/blue_team"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@color/blue_team_light"
                            android:gravity="center"
                            android:text="ðŸ“¶"
                            android:textColor="@color/blue_team_dark"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ProtecciÃ³n Anti-Deauth"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Bloquea ataques de desautenticaciÃ³n WiFi"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvAntiDeauthStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="âšª Desactivado"
                                android:textColor="@color/gray"
                                android:textSize="11sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchAntiDeauth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDeauthBlocked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Ataques bloqueados: 0"
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Network Monitor -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monitor de Red en Tiempo Real"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TrÃ¡fico"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvTraffic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 KB/s"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amenazas"
                                android:textColor="@color/gray"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tvThreats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvActivityLog"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="8dp"
                        android:padding="8dp"
                        android:text="Log de actividad..."
                        android:textColor="@color/gray"
                        android:textSize="11sp"
                        android:fontFamily="monospace"
                        android:background="@color/white"
                        android:scrollbars="vertical"
                        android:focusable="true"
                        android:focusableInTouchMode="true"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
