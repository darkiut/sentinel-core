<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="EstadÃ­sticas"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <!-- ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta 1: Ataques Detectados -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDetectados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ataques Detectados: 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/red_team"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressDetectados"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        app:indicatorColor="@color/red_team" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 2: Bloqueados -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvBloqueados"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bloqueados: 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_team"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBloqueados"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        app:indicatorColor="@color/blue_team" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 3: Firewall Block -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvFirewall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firewall Block: 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/event_log"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressFirewall"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        app:indicatorColor="@color/event_log" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 4: Phishing -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvPhishing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phishing: 0"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressPhishing"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        app:indicatorColor="@color/primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta 5: Total -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total de Eventos: 0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
